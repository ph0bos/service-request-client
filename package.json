{
  "name": "@pa-media-group/service-request-client",
  "version": "0.0.7",
  "description": "An extension to request to facilitate making requests against discoverable HTTP services",
  "publishConfig": {
    "registry": "https://nexus.pressassociation.io/repository/npm-private/"
  },
  "main": "./dist/index.js",
  "types": "./dist/types.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rimraf ./dist/ && npm run lint && tsc && copyfiles ./package.json ./dist/",
    "package": "npm run clean && npm run build && serverless package",
    "clean": "rimraf .build .cache .eslintcache .serverless coverage",
    "clean:dist": "rimraf .build .cache .eslintcache .serverless coverage node_modules",
    "format": "prettier --write '{src,test}/**/*.ts' '**/*.md'",
    "lint": "eslint . --cache --ext .ts,.tsx",
    "lint:fix": "eslint . --cache --fix --ext .ts,.tsx",
    "lint:package": "npmPkgJsonLint -c ./.npmpackagejsonlintrc.json .",
    "test": "jest --verbose --coverage --config jest.config.json",
    "test:watch": "jest --verbose --coverage --config jest.config.json --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/@pa-media-group/service-request-client.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/@pa-media-group/service-request-client/issues"
  },
  "homepage": "https://github.com/@pa-media-group/service-request-client#readme",
  "dependencies": {
    "axios": "^0.27.2",
    "axios-retry": "^3.2.5",
    "check-types": "^11.1.2",
    "pino": "^6.14.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@pa-media-group/pa-semantic-release": "^1.0.2",
    "@press-association/cz-jira-conventional-changelog": "^1.2.0",
    "@types/check-types": "^7.3.3",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@types/pino": "^6.3.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^28.1.1",
    "jest-coverage-badges": "^1.1.2",
    "jest-extended": "^2.0.0",
    "jest-mock-axios": "^4.6.1",
    "lint-staged": "^11.2.6",
    "npm-package-json-lint": "^5.4.2",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.5",
    "ts-mockery": "^1.2.0",
    "typescript": "^4.7.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@press-association/cz-jira-conventional-changelog"
    }
  }
}
